<h1> <%= @article.title %> </h1>

<p> <%= @article.body %> </p>

<p><%= link_to "<<delete", article_path(@article), method: :delete,  data: {confirm: "Are you sure to delete the articles?"} %></p>

<p><%= link_to "<<edit", edit_article_path(@article) %></p>
<p><%= link_to "<<Back to Article list", articles_path %></p>

<h3>Comments</h3>

<% @article.comments.each do |comment| %>
	<p>User name: <%= comment.user_name %>.Message: <%= comment.message %></p>
<% end %>

<%= form_for [@article, @article.comments.build] do |f| %>
	<p>
		<%= f.label :message%><br />
		<%= f.text_area :message %>
	</p>
	<p>
		<%= f.label :user_name %><br />
		<%= f.text_field :user_name %>
	</p>	
	<p>
		<%= f.submit %>
	</p>
<% end %>